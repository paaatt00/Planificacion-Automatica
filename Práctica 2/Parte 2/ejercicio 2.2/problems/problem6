( defproblem problem dronedom

    ( ; INITIAL STATE
        ; drone1 - drone
        (DRONE drone1)
        ; warehouse loc1 loc2 loc3 - location
        (LOCATION warehouse) (LOCATION loc1) (LOCATION loc2) (LOCATION loc3)
        ; carrier1 - carrier
        (CARRIER carrier1) (CARRIER carrier2) (CARRIER carrier3)
        ; capacity
        (CAPACITY carrier1 20) (CAPACITY carrier2 50) (CAPACITY carrier3 100)
        ; coste inicial
        (COSTE cost)

        (travel-cost cost 0)
        (drone-at drone1 warehouse)
        (drone-free drone1)
        (loc-needs loc1 20)
        (loc-needs loc2 50)
	    (loc-needs loc3 100)
        (carrier-at carrier1 warehouse) (carrier-at carrier2 warehouse) (carrier-at carrier3 warehouse)
    )

    ( ; TASKS
        (send-all-boxes) ; enviar-todo
    )

)
